from sklearn.linear_model import LogisticRegression
from sklearn.metrics import classification_report, accuracy_score

# Lojistik Regresyon modelini oluştur
# max_iter değerini artırarak yakınsama sorunlarının önüne geçilebilir.
logistic_model = LogisticRegression(max_iter=1000, random_state=42)

# Modeli eğitim verisi üzerinde eğit
print("Lojistik Regresyon modeli eğitiliyor...")
logistic_model.fit(X_train_tfidf, y_train)
print("Model eğitimi tamamlandı.")

# Test verisi üzerinde tahmin yap
y_pred = logistic_model.predict(X_test_tfidf)

# Modelin performansını değerlendir
print("\nModel Performans Raporu:")
print(classification_report(y_test, y_pred))
print(f"Doğruluk Oranı (Accuracy): {accuracy_score(y_test, y_pred):.4f}")
